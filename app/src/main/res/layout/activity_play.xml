<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game_play"
    android:paddingTop="45dp"
    android:paddingBottom="10dp">
    <RelativeLayout
        android:id="@+id/top"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="54dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_avatar"
            android:layout_marginTop="4dp"/>
        <RelativeLayout
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_avatar"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_heart"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="0"
                android:background="@drawable/ic_heart"
                android:gravity="center"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_point"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:paddingTop="6dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_coin"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="câu tiếp"
        android:visibility="invisible"
        android:textSize="18sp"
        android:layout_below="@+id/top"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_next"/>

    <Button
        android:id="@+id/btn_play_again"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="chơi lại"
        android:visibility="invisible"
        android:textSize="18sp"
        android:layout_below="@+id/top"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_next"/>

    <ImageView
        android:id="@+id/img_picture"
        android:layout_marginTop="173dp"
        android:layout_width="340dp"
        android:layout_height="215dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:id="@+id/rl_image"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/bg_picture_border">

    </RelativeLayout>

    <LinearLayout
        android:paddingRight="32dp"
        android:paddingLeft="32dp"
        android:id="@+id/ln_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ln_3"
        android:layout_below="@+id/rl_image"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/anwser1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"></LinearLayout>
        <LinearLayout
            android:id="@+id/anwser2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:id="@+id/ln_3"
        android:layout_above="@+id/ln_4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
    </LinearLayout>


    <LinearLayout
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:id="@+id/ln_4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">
    </LinearLayout>
</RelativeLayout>